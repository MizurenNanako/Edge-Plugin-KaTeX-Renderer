{
    "name": "KaTeX Renderer",
    "version": "1.2.3",
    "description": "A plugin to render mathematical equations using KaTeX",
    "author": "Mizuren Nanako",
    "manifest_version": 3,
    "permissions": [
        "contextMenus",
        "activeTab",
        "tabs",
        "commands"
    ],
    "icons": {
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "action": {
        "default_icon": {
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "commands": {
        "KFPR": {
            "description": "Katex: Render Full Page",
            "global": true
        },
        "KFR": {
            "description": "Katex: Force Render Selected",
            "global": true
        },
        "KSC": {
            "description": "Katex: Syntaxs Check",
            "global": true
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "scripts/content.js"
            ]
        }
    ],
    "background": {
        "service_worker": "scripts/background.js"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "katex/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}